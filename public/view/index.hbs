<!-- Covid Status !-->
<div id="status">
  <div class="container">
    <h1 class="head text-center bg-success text-white font-weight-bold">COVID'19 STATUS</h1>
    <div class="row p-md-3 px-md-1">
      <div class="  col-md-6" style="background-color:yellow; height: 400px;">
      <p class="in_world text-center font-weight-bold">WORLD</p>
      <p class="world_status text-center">Active: {{WorldActive}} </p>
      <p class="world_status text-center">Last Update: {{WorldLastUpdate}} </p>
      <p class="world_status text-center">New Cases: {{WorldNewCases}} </p>
      <p class="world_status text-center">Total Cases: {{WorldTotalCases}} </p>
      <p class="world_status text-center">Total Deaths: {{WorldTotalDeaths}} </p>
      <p class="world_status text-center">Total Recovered: {{WorldRecoveredCases}} </p>
      </div>
      <div class=" col-md-6" style="background-color:rgb(128, 134, 253); height: 400px;">
